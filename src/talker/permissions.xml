<?xml version="1.0" encoding="utf-8"?>
<package>
    <permissions>
        <grant name="talker">
            <allow_rule>
                <publish>
                    <topics>
                        <topic>*</topic>
                    </topics>
                    <partitions>
                      <partition>*</partition>
                    </partitions>
                </publish>
                <subscribe>
                    <topics>
                        <topic>*</topic>
                    </topics>
                    <partitions>
                      <partition>*</partition>
                    </partitions>
                </subscribe>
            </allow_rule>
            <default>DENY</default>
        </grant>
    </permissions>
</package>
