<?xml version="1.0" encoding="utf-8"?>
<package>
  <permissions>
    <grant name="foo/listener">
      <allow_rule>
        <ros_subscribe>
          <ros_topics>
            <ros_topic>/clock</ros_topic>
            <ros_topic>/foo/parameter_events</ros_topic>
            <ros_topic>/foo/chatter</ros_topic>
          </ros_topics>
        </ros_subscribe>
        <ros_publish>
          <ros_topics>
            <ros_topic>/foo/parameter_events</ros_topic>
          </ros_topics>
        </ros_publish>
        <ros_call>
          <ros_services>
            <ros_service>/foo/listener/describe_parameters</ros_service>
            <ros_service>/foo/listener/get_parameter_types</ros_service>
            <ros_service>/foo/listener/get_parameters</ros_service>
            <ros_service>/foo/listener/list_parameters</ros_service>
            <ros_service>/foo/listener/set_parameters</ros_service>
            <ros_service>/foo/listener/set_parameters_atomically</ros_service>
          </ros_services>
        </ros_call>
        <ros_execute>
          <ros_services>
            <ros_service>/foo/listener/describe_parameters</ros_service>
            <ros_service>/foo/listener/get_parameter_types</ros_service>
            <ros_service>/foo/listener/get_parameters</ros_service>
            <ros_service>/foo/listener/list_parameters</ros_service>
            <ros_service>/foo/listener/set_parameters</ros_service>
            <ros_service>/foo/listener/set_parameters_atomically</ros_service>
          </ros_services>
        </ros_execute>
      </allow_rule>
      <default>DENY</default>
    </grant>
  </permissions>
</package>
