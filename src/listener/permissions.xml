<?xml version="1.0" encoding="UTF-8"?>
<package xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://www.omg.org/spec/DDS-SECURITY/20160303/omg_shared_ca_permissions.xsd">
  <permissions>
    <grant name="listener">
      <allow_rule>
        <publish>
          <partitions>
            <partition>*</partition>
          </partitions>
          <topics>
            <topic>*</topic>
          </topics>
        </publish>
        <subscribe>
          <partitions>
            <partition>*</partition>
          </partitions>
          <topics>
            <topic>*</topic>
          </topics>
        </subscribe>
        <subscribe>
          <topics>
            <topic>DCPS*</topic>
          </topics>
        </subscribe>
      </allow_rule>
      <default>DENY</default>
    </grant>
  </permissions>
</package>
