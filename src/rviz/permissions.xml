<?xml version="1.0" encoding="utf-8"?>
<package>
  <permissions>
    <grant name="rviz">
      <allow_rule>
        <ros_subscribe>
          <ros_topics>
            <ros_topic>/clock</ros_topic>
            <ros_topic>/parameter_events</ros_topic>
            <ros_topic>/goal</ros_topic>
            <ros_topic>/clicked_point</ros_topic>
            <ros_topic>/move_base_simple/goal</ros_topic>
            <ros_topic>/odom</ros_topic>
            <ros_topic>/tf</ros_topic>
            <ros_topic>/tf_static</ros_topic>
            <ros_topic>/scan</ros_topic>
            <ros_topic>/scan_half</ros_topic>
            <ros_topic>*</ros_topic>
          </ros_topics>
        </ros_subscribe>
        <ros_publish>
          <ros_topics>
            <ros_topic>/parameter_events</ros_topic>
            <ros_topic>/goal</ros_topic>
            <ros_topic>/clicked_point</ros_topic>
            <ros_topic>/move_base_simple/goal</ros_topic>
          </ros_topics>
        </ros_publish>
        <ros_call>
          <ros_services>
            <ros_service>/rviz/describe_parameters</ros_service>
            <ros_service>/rviz/get_parameter_types</ros_service>
            <ros_service>/rviz/get_parameters</ros_service>
            <ros_service>/rviz/list_parameters</ros_service>
            <ros_service>/rviz/set_parameters</ros_service>
            <ros_service>/rviz/set_parameters_atomically</ros_service>
          </ros_services>
        </ros_call>
        <ros_execute>
          <ros_services>
            <ros_service>/rviz/describe_parameters</ros_service>
            <ros_service>/rviz/get_parameter_types</ros_service>
            <ros_service>/rviz/get_parameters</ros_service>
            <ros_service>/rviz/list_parameters</ros_service>
            <ros_service>/rviz/set_parameters</ros_service>
            <ros_service>/rviz/set_parameters_atomically</ros_service>
          </ros_services>
        </ros_execute>
      </allow_rule>
      <default>DENY</default>
    </grant>
  </permissions>
</package>
