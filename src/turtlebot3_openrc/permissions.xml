<?xml version="1.0" encoding="utf-8"?>
<package>
  <permissions>
    <grant name="turtlebot3_openrc">
      <allow_rule>
        <ros_subscribe>
          <ros_topics>
            <ros_topic>/cmd_vel</ros_topic>
            <ros_topic>/motor_power</ros_topic>
            <ros_topic>/reset</ros_topic>
            <ros_topic>/time_sync</ros_topic>
          </ros_topics>
        </ros_subscribe>
        <ros_publish>
          <ros_topics>
            <ros_topic>/imu</ros_topic>
            <ros_topic>/joint_states</ros_topic>
            <ros_topic>/sensor_state</ros_topic>
            <ros_topic>/version_info</ros_topic>
          </ros_topics>
        </ros_publish>
      </allow_rule>
      <default>DENY</default>
    </grant>
  </permissions>
</package>
