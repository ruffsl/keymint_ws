include <tunables/global>

profile example_talker /talker {
  include <abstractions/node>
  #@{NODE_NAMESPACE}=/talker
  allow topic /chatter p,
  allow topic /chatter2 p,
}

profile example_listener /listener {
  include <abstractions/node>
  #@{NODE_NAMESPACE}=/talker
  allow topic /chatter2 s,
  allow topic /chatter s,
}
